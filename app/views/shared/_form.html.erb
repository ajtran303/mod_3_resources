<section class="container-fluid">
  <%= form_tag path, method: method do %>
    <div class="form-group">
      <%= label_tag :title, "Title" %>
      <div class="width 100%">
      <%= text_field_tag :title, @resource.title %>
      </div>
    </div>

    <div class="form-group">
      <%= label_tag :link, "URL" %>
      <div class="width 100%">
      <%= text_field_tag :link, @resource.link %>
      </div>
    </div>

    <div class="form-group">
      <%= label_tag :category, "Category" %>
      <div class="width 100%">
      <%= select_tag :category, raw("<option>Official Documentation</option><option>Project Related</option><option>Tools</option><option>Miscellaneous</option><option>Rails</option><option>Ruby</option><option>APIs</option><option>ActiveRecord</option><option>Testing</option>".html_safe), include_blank: true %>
      </div>
    </div>

    <div class="form-group">
      <%= label_tag :source, "Website Name" %>
      <div class="width 100%">
      <%= text_field_tag :source, @resource.source %>
      </div>
    </div>

    <div class="form-group">
      <%= label_tag :project, "Related Project (optional)" %>
      <div class="width 100%">
      <%= text_field_tag :project, @resource.project %>
      </div>
    </div>

    <div class="form-group">
      <%= label_tag :description, "Description (optional)" %>
      <div class="width 100%">
      <%= text_field_tag :description, @resource.description %>
      </div>
    </div>
      <%= submit_tag button_text, class: 'btn btn-success btn-lg' %>
  <% end %>
  </section>
