<section id="resource-<%= resource.id %>">
  <hr>
  <p><b>Link:</b> <%= link_to "#{resource.title}", resource.link %>
  <p><b>Website:</b> <%= resource.source %>
    <% if has_project?(resource) %>
      <p><b>Related Project:</b> <%= resource.project %>
    <% end %>

    <% if has_description?(resource) %>
      <p><b>Description:</b> <%= resource.description %>
    <% end %>

  <p><%= link_to 'Edit Resource', "/resources/#{resource.id}/edit", method: :get, class: 'btn btn-info btn-xs' %>
  <%= link_to 'Delete Resource', "/resources/#{resource.id}", method: :delete, class: 'btn btn-info btn-xs' %>
 </section>
